<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="co.kr.hunter.common.mapper.CommonMapper">
 
    <!--  ============================================= -->
    <!--           전체 공통  페이징에 사용             -->

    <!--  ============================================= -->
    <!-- SELECT PAGING_OUT.* FROM ( SELECT ROW_NUMBER() OVER() AS RNUM, PAGING_IN.* FROM ( -->
    <sql id="pagePrefix">
		<![CDATA[
		SELECT TB.* FROM ( SELECT PAGING_OUT.* FROM (
		]]>
    </sql>

    <!-- ) PAGING_IN )  PAGING_OUT WHERE RNUM > #{firstIndex} LIMIT #{lastIndex} -->
    <sql id="pageSubfix">
		<![CDATA[
		)  PAGING_OUT WHERE RNUM > #{firstIndex} ORDER BY RNUM
		LIMIT #{lastIndex} ) TB ORDER BY RNUM
		]]>
    </sql>
		
    <select id="fileDownload" resultType="fileVO">
	   /* CommonMapper.fileDownload */
	select file_no
	     , code_id
	     , code
	     , file_nm
	     , file_size / 1024 as file_size
	     , file_path
      from tb_file 
     where file_no = #{fileNo}
	</select>
			
</mapper>